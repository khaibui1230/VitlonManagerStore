@model QuanVitLonManager.Models.Order

@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="display-6 fw-bold text-success mb-3">Thanh toán thành công!</h2>
                    <p class="lead mb-4">Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi. Đơn hàng #@Model.Id đã được thanh toán vào lúc @Model.PaymentDate?.ToString("HH:mm, dd/MM/yyyy").</p>
                    
                    <div class="alert alert-info mb-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                            <div class="text-start">
                                <p class="mb-0">
                                    @if (Model.OrderType == OrderType.DineIn)
                                    {
                                        <span>Vui lòng đợi nhân viên phục vụ món ăn tại bàn số @Model.TableNumber.</span>
                                    }
                                    else
                                    {
                                        <span>Vui lòng đợi thông báo khi đơn hàng của bạn đã sẵn sàng để mang đi.</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="payment-details mb-4">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="p-3 border rounded">
                                    <h5 class="mb-2">Chi tiết thanh toán</h5>
                                    <p class="mb-0"><strong>Phương thức:</strong> @Model.PaymentMethod.ToString()</p>
                                    <p class="mb-0"><strong>Số tiền:</strong> @Model.TotalAmount.ToString("N0") VNĐ</p>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="p-3 border rounded">
                                    <h5 class="mb-2">Trạng thái đơn hàng</h5>
                                    <p class="mb-0"><strong>Tình trạng:</strong> @Model.Status.ToString()</p>
                                    <p class="mb-0"><strong>Thời gian:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-3">
                        <a asp-controller="Order" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-receipt me-2"></i>Xem chi tiết đơn hàng
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house-door me-2"></i>Trở về trang chủ
                        </a>
                        <a asp-controller="Menu" asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-list me-2"></i>Tiếp tục đặt món
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 