@using QuanVitLonManager.ViewModels  
@model ContactViewModel
@{
    ViewData["Title"] = "Liên hệ";
}

<div class="contact-page">
    <div class="row">
        <div class="col-md-6 mb-4">
            <h2>Thông tin liên hệ</h2>
            <div class="contact-info mt-4">
                <div class="mb-4">
                    <h5><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ</h5>
                    <p>354, đường Lê Văn Thọ, phường 11, quận Gò Vấp, TP. HCM</p>
                </div>
                <div class="mb-4">
                    <h5><i class="fas fa-phone-alt me-2"></i>Điện thoại</h5>
                    <p>Hotline: 0379665639</p>
                </div>
                <div class="mb-4">
                    <h5><i class="fas fa-envelope me-2"></i>Email</h5>
                    <p>vitlonhien@gmail.com</p>
                </div>
                <div class="mb-4">
                    <h5><i class="far fa-clock me-2"></i>Giờ mở cửa</h5>
                    <p>Thứ 2 - Chủ Nhật: 18:00 - 1:00<br>
                    Ngày lễ: 18:00 - 1:00<br>
                    Ngày nghỉ: Mùng 1 và Rằm (Âm Lịch)
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title mb-4">Gửi tin nhắn cho chúng tôi</h2>
                    <form asp-action="Contact" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Subject" class="form-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Gửi tin nhắn</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <h3 class="mb-4">Bản đồ</h3>
        <div class="map-container">
            <iframe 
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.6727925517764!2d106.6340613!3d10.8352287!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752a1d7a21d433%3A0x3804afe1155cc252!2zMzU0IMSQLiBMw6ogVsSDbiBUaOG7jSwgUGjGsOG7nW5nIDExLCBHw7IgVuG6pXAsIFRow6BuaCBwaOG7kSBI4buTIENow60gTWluaCwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1712056693407!5m2!1svi!2s" 
                width="100%" 
                height="450" 
                style="border:0;" 
                allowfullscreen="" 
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .contact-page {
            margin-bottom: 3rem;
        }
        .contact-info i {
            color: #0d6efd;
        }
        .map-container {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0,0,0,0.1);
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}