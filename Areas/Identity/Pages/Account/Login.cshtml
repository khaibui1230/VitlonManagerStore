@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">@ViewData["Title"]</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="username" />
                            <label asp-for="Input.UserName" class="form-label">Tên đăng nhập</label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                Ghi nhớ đăng nhập
                            </label>
                        </div>
                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary">Đăng nhập</button>
                        </div>
                        <div class="mt-3">
                            <p class="text-center mb-2">
                                <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                            </p>
                            <p class="text-center mb-2">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký tài khoản mới</a>
                            </p>
                        </div>
                    </form>

                    <div class="mt-4">
                        <div class="text-center mb-3">
                            <span class="divider-text">hoặc đăng nhập bằng</span>
                        </div>
                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) == 0)
                            {
                                <div class="text-center text-muted">
                                    <p>Chưa cấu hình dịch vụ xác thực bên ngoài.</p>
                                </div>
                            }
                            else
                            {
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins)
                                        {
                                            <button type="submit" class="btn btn-outline-secondary social-login-btn @provider.Name.ToLower()" 
                                                    name="provider" value="@provider.Name" 
                                                    title="Đăng nhập bằng tài khoản @provider.DisplayName">
                                                <i class="@(provider.Name.ToLower() == "google" ? "fab fa-google" : "fab fa-zalo")"></i>
                                                Đăng nhập bằng @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .divider-text {
        position: relative;
        text-align: center;
        color: #6c757d;
    }

    .divider-text::before,
    .divider-text::after {
        content: "";
        position: absolute;
        top: 50%;
        width: 45%;
        height: 1px;
        background-color: #dee2e6;
    }

    .divider-text::before {
        left: 0;
    }

    .divider-text::after {
        right: 0;
    }

    .social-login-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 10px;
        font-weight: 500;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .social-login-btn.google {
        color: #fff;
        background-color: #DB4437;
        border-color: #DB4437;
    }

    .social-login-btn.google:hover {
        background-color: #c53929;
        border-color: #c53929;
    }

    .social-login-btn.zalo {
        color: #fff;
        background-color: #0068FF;
        border-color: #0068FF;
    }

    .social-login-btn.zalo:hover {
        background-color: #0056d6;
        border-color: #0056d6;
    }

    .social-login-btn i {
        font-size: 1.2rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
