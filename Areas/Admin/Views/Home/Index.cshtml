@{
    ViewData["Title"] = "Trang quản trị";
}

<div class="container py-4">
    <h1 class="mb-4">Trang quản trị</h1>
    
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users-cog fa-4x mb-3 text-primary"></i>
                    <h5 class="card-title">Quản lý người dùng</h5>
                    <p class="card-text">Quản lý tài khoản, phân quyền người dùng</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right me-2"></i>Truy cập
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-utensils fa-4x mb-3 text-success"></i>
                    <h5 class="card-title">Quản lý thực đơn</h5>
                    <p class="card-text">Quản lý danh mục và món ăn</p>
                    <a asp-area="Admin" asp-controller="Menu" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-arrow-right me-2"></i>Truy cập
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-4x mb-3 text-warning"></i>
                    <h5 class="card-title">Quản lý đơn hàng</h5>
                    <p class="card-text">Xem và xử lý đơn hàng</p>
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-warning">
                        <i class="fas fa-arrow-right me-2"></i>Truy cập
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-4x mb-3 text-info"></i>
                    <h5 class="card-title">Thống kê báo cáo</h5>
                    <p class="card-text">Xem báo cáo doanh thu, đơn hàng</p>
                    <a asp-area="Admin" asp-controller="Report" asp-action="Index" class="btn btn-info">
                        <i class="fas fa-arrow-right me-2"></i>Truy cập
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>